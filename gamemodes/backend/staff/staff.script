YCMD:fixveh(playerid, params[], help)
{
	if(help)
    {
        notification.Show(playerid, "HELP", "Komanda koja Vam popravlja vozilo igracu", "+", BOXCOLOR_BLUE);
        return 1;
    }

	if (GetPlayerStaffLevel(playerid) < e_ASSISTANT)
		return notification.Show(playerid, "Greska", "Samo staff moze ovo!", "!", BOXCOLOR_RED);

	new targetid;
	if(sscanf(params, "u", targetid))
		return notification.Show(playerid, "KORISCENJE", "/fv [ID/Ime]", "?", BOXCOLOR_BLUE);

	if(targetid == INVALID_PLAYER_ID)
		return notification.Show(playerid, "GRESKA", "Taj igrac nije na serveru!", "!", BOXCOLOR_RED);

	new vehicleid = GetPlayerVehicleID(targetid);
	if(!IsPlayerInAnyVehicle(targetid))
		return notification.Show(playerid, "GRESKA", "Taj igrac nije u vozilu!", "!", BOXCOLOR_RED);

	RepairVehicle(vehicleid);
	SetVehicleHealth(vehicleid, 999.0);
	
	notification.Show(playerid, "USPESNO", "Popravili ste vozilo igracu!", "!", BOXCOLOR_GREEN);

	return 1;
}
YCMD:gethere(playerid, const params[], help)
{
	if(help)
    {
		notification.Show(playerid, "HELP", "Komanda da dovucete igraca do sebe", "+", BOXCOLOR_BLUE);
        return 1;
    }

	if (GetPlayerStaffLevel(playerid) < e_ASSISTANT)
