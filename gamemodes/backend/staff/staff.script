YCMD:unprison(playerid, params[], help) {

	if (GetPlayerStaffLevel(playerid)< e_ASSISTANT)
		return notification.Show(playerid, "Greska", "Samo staff lvl. 2+ moze ovo!", "!", BOXCOLOR_RED);
	
	new target;
