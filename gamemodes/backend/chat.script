#include <ysilib\YSI_Coding\y_hooks>


/*
	Defines
*/
#define SendErrorMessage(%0,%1) \
	SendClientMessageEx(%0, x_red, "[!/Error]: {FFFFFF}"%1) 

#define SendJobMessage(%0,%1) \
	SendClientMessageEx(%0, x_ogycolor, "[?/Job]: {FFFFFF}"%1)

#define SendInfoMessage(%0,%1) \
	SendClientMessageEx(%0, x_server, "��� MARYLAND: {FFFFFF}"%1)
/*
	Hooks
*/
hook OnGameModeInit()
{
    print("backend/chat loaded");

    return 1;
}

hook OnPlayerText(playerid, text[])
{
    if(IC_CHAT)
    {
        static string[256];
        format(string,sizeof(string), "%s kaze \187; %s",GetName(playerid), text);
        ProxDetector(playerid, Float:30.0, x_white, string);
        return false;
    }
    return 1;
}

YCMD:me(playerid, params[], help)
{
	new text[80];
	if(sscanf(params, "s[80]", text)) return SendClientMessage(playerid, x_blue,"KORISCENJE \187; "c_white"/me [Text]");
	new string[256];
 	format(string,sizeof(string), "* %s %s",GetName(playerid), text);
 	ProxDetector(playerid, Float:30.0, x_purple, string);
	return 1;
}
YCMD:do(playerid, params[], help)
{
	new text[80];
	if(sscanf(params, "s[80]", text)) return SendClientMessage(playerid, x_blue,"KORISCENJE \187; "c_white"/do [Text]");
	new string[256];
 	format(string,sizeof(string), "* %s (( %s ))",GetName(playerid), text);
 	ProxDetector(playerid, Float:30.0, x_purple, string);
	return 1;
}
YCMD:b(playerid, params[], help)
{
	new text[80];
	if(sscanf(params, "s[80]", text)) return SendClientMessage(playerid, x_blue,"KORISCENJE \187; "c_white"/b [Text]");
	new string[256];
 	format(string,sizeof(string), "{C0C0C0}(( [OOC] "c_white"%s kaze \187; %s {C0C0C0}))",GetName(playerid), text);
 	ProxDetector(playerid, Float:30.0, x_server, string);
	return 1;
}