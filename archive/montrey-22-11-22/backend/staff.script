YCMD:setstaff(playerid, const string: params[], help)
{
	if(help)
    {
        SendClientMessage(playerid, 0xFFFFFFAA, "HELP: /help <otvoriracun> da otvoris racun.");
        return 1;
    }

	if(!IsPlayerAdmin(playerid))
		return SendClientMessage(playerid, -1, ""c_server"montrey // "c_white"Morate biti RCON!");

	static
		targetid,
		level;

	if (sscanf(params, "ri", targetid, level))
		return SendClientMessage(playerid, -1, ""c_server"montrey // "c_white"/setstaff [targetid] [0/1]");

	if (!level && !player_Staff[targetid])
		return SendClientMessage(playerid, -1, ""c_server"montrey // "c_white"Taj igrac nije u staff-u.");

	if (level == player_Staff[targetid])
		return SendClientMessage(playerid, -1, ""c_server"montrey // "c_white"Taj igrac je vec u staff-u.");

	player_Staff[targetid] = level;
	
	if (!level)
	{
		static fmt_string[64];

		format(fmt_string, sizeof(fmt_string), ""c_server"montrey // "c_white"%s Vas je izbacio iz staff-a.", ReturnPlayerName(playerid));
		SendClientMessage(targetid, -1, fmt_string);

		format(fmt_string, sizeof(fmt_string), ""c_server"montrey // "c_white"Izbacili ste %s iz staff-a.", ReturnPlayerName(targetid));
		SendClientMessage(playerid, -1, fmt_string);
	}
	else
	{
		static fmt_string[64];

		format(fmt_string, sizeof(fmt_string), ""c_server"montrey // "c_white"%s Vas je ubacio u staff.", ReturnPlayerName(playerid));
		SendClientMessage(targetid, -1, fmt_string);

		format(fmt_string, sizeof(fmt_string), ""c_server"montrey // "c_white"Ubacili ste %s u staff.", ReturnPlayerName(targetid));
		SendClientMessage(playerid, -1, fmt_string);
	}
    new INI:File = INI_Open(Account_Path(playerid));
	INI_SetTag( File, "data" );
    INI_WriteInt(File, "Staff", player_Staff[playerid]);
	INI_Close( File );
	
    return 1;
}